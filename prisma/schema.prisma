// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For credentials auth
  image         String?
  role          String    @default("USER") // USER, ADMIN
  status        String    @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt     DateTime  @default(now())
  
  // Settings
  globalVisibility Boolean @default(true) // If true, wines are visible in marketplace by default

  // Relations
  cellarItems   CellarItem[]
  tastingNotes  TastingNote[]
  sentMessages  Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
}

model Wine {
  id            String    @id @default(cuid())
  name          String
  producer      String
  vintage       Int?
  type          String    // RED, WHITE, SPARKLING, ROSE, OTHER
  region        String?
  country       String?
  grapes        String?
  image         String?   // URL
  alcohol       Float?
  marketPrice   Float?
  marketPriceUpdated DateTime?
  
  // Tracking
  createdAt     DateTime  @default(now())
  
  // Relations
  cellarItems   CellarItem[]
  tastingNotes  TastingNote[]
}

model CellarItem {
  id            String    @id @default(cuid())
  userId        String
  wineId        String
  quantity      Int       @default(1)
  buyPrice      Float?
  currency      String    @default("EUR")
  isVisible     Boolean   @default(true) // Visible in marketplace?
  
  addedAt       DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  wine          Wine      @relation(fields: [wineId], references: [id], onDelete: Cascade)
}

model TastingNote {
  id            String    @id @default(cuid())
  userId        String
  wineId        String
  rating        Int?      // 1-5 or 1-100
  note          String?
  tastedAt      DateTime  @default(now())

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  wine          Wine      @relation(fields: [wineId], references: [id], onDelete: Cascade)
}

model Message {
  id            String    @id @default(cuid())
  senderId      String
  receiverId    String
  body          String
  createdAt     DateTime  @default(now())
  isRead        Boolean   @default(false)
  relatedWineId String?   // Optional: link to a specific wine context

  sender        User      @relation("SentMessages", fields: [senderId], references: [id])
  receiver      User      @relation("ReceivedMessages", fields: [receiverId], references: [id])
}
